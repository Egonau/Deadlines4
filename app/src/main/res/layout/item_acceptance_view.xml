<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:visibility="visible">

    <androidx.cardview.widget.CardView
        android:id="@+id/deadlineAcceptanceCardView"
        android:layout_width="wrap_content"
        android:layout_height="136dp"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="154dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/deadline_acceptance_name"
                    android:layout_width="match_parent"
                    android:layout_height="79dp"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/deadline_acceptance_priority"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/deadline_acceptance_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/deadline_acceptance_lesson"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <TextView
                android:id="@+id/deadline_acceptance_description"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:textSize="14sp"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/acceptImageView"
                    android:layout_width="match_parent"
                    android:layout_height="69dp"
                    app:srcCompat="@drawable/accept" />

                <ImageView
                    android:id="@+id/rejectImageView"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    app:srcCompat="@drawable/reject" />

            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>